<div class="bg-white border-b border-grey-light mb-8">
    <div class="container mx-auto px-32">
        <div class="flex justify-between">
            <div class="py-3">
                <a href="/" class="no-underline text-sm text-grey-dark font-bold">Twitter</a>
            </div>
            <div>
                {% if is_granted('ROLE_USER') %}
                    <div>
                        <div class="block sm:inline-block text-grey cursor-pointer hover:border-blue-dark hover:bg-grey-lightest relative flex justify-between dropdown text-sm font-bold p-3">
                            {{ app.user.username }} &nbsp;<i class="fa fa-chevron-down fa-sm text-blue"></i>
                            <div class="hidden mt-3 absolute w-full pin-l sm:pin-r z-30 border-t-2 bg-white border-blue-dark dropdown-content shadow">
                                <div class="border-b border-grey-light">
                                    <div class="font-bold px-4 py-2 cursor-auto">
                                        Settings
                                    </div>
                                    <a href="/profile" class="block px-4 py-2 hover:bg-grey-lightest no-underline text-blue">
                                        <i class="fa fa-user fa-sm"></i>&nbsp;
                                        Your Profile
                                    </a>
                                </div>
                                <div class="">
                                    <a href="/logout" class="block px-4 py-2 hover:bg-grey-lightest no-underline text-sm text-grey-dark font-bold">
                                        <i class="fa fa-sign-out fa-sm"></i>&nbsp;
                                        Logout
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="flex justify-around text-grey cursor-pointer text-sm font-bold">
                        <div class="mr-4">
                            <a class=" block text-grey-dark p-3 hover:bg-grey-lighter no-underline" href="/register">
                                Sign Up
                            </a>
                        </div>
                        <div>
                            <a class=" block text-grey-dark p-3 hover:bg-grey-lighter no-underline" href="/login">
                                Log In
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>