{% extends 'base.html.twig' %}

{% block title %}Twitter{% endblock %}

{% block body_class %}bg-grey-lighter{% endblock %}

{% block body %}

    {% include 'partials/header.html.twig' %}

    <div class="container mx-auto px-32 mb-8">
        <div class="flex">
            {% if app.user %}
                <div class="w-1/3">
                    <tweeter username="{{ user.username }}"></tweeter>
                </div>
            {% endif %}
            <div class="w-2/3 ml-4">
                <tweet-list :user="{{ user.serialize }}" username="{{ app.user ? app.user.username : '' }}" ref="tweetlist"></tweet-list>
            </div>
        </div>
    </div>

{% endblock %}
