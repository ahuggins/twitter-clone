{% extends 'base.html.twig' %}

{% block title %}Twitter - Login{% endblock %}

{% block body_class %}bg-grey-lighter{% endblock %}

{% block body %}
{% include 'partials/header.html.twig' %}
<div class="container mx-auto px-32">
    <div class="container mx-auto bg-white border border-grey-light">
        <div class="px-32 pt-10 pb-8">
            <h1 class="text-2xl mb-6">Log in to Twitter</h1>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-8 bg-green-lightest border-l-4 border-green text-green-dark p-4" role="alert">
                        <p class="font-bold">Success</p>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% if errors %}
                <div class="mb-8 bg-orange-lightest border-l-4 border-orange text-orange-dark p-4" role="alert">
                    <p class="font-bold">Whoops</p>
                    <p>{{ errors.getMessage() }}</p>
                </div>
            {% endif %}
            
            <form action="{{ path('login') }}" method="POST">
                <input
                    type="hidden"
                    name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                />
                <div class="mb-8">
                    <input
                        name="_username"
                        type="text"
                        class="border border-grey-light p-2 rounded"
                        placeholder="Username"
                        value="{{ last_username }}" 
                    />
                </div>
                <div class="mb-8">
                    <input
                        name="_password"
                        type="password"
                        class="border border-grey-light p-2 rounded"
                        placeholder="Password" 
                    />
                </div>
                <div>
                    <button
                        type="submit"
                        class="text-sm bg-blue text-white rounded-full py-2 px-3 font-bold"
                    >
                            Log In
                    </button>
                </div>
            </form>
        </div>
        <div class="bg-grey-lightest px-32 py-6 text-sm text-grey-darker">
            New to Twitter? <a class="no-underline text-blue" href="/register">Sign up now &raquo;</a>
        </div>
    </div>
</div>
{% endblock %}
